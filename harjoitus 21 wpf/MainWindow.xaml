<Window x:Class="ShoppingCart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopping Cart" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Valitse tuotteita:" Margin="0,0,0,10"/>
            <CheckBox Name="chkProduct1" Content="Tuote 1" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="chkProduct2" Content="Tuote 2" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="chkProduct3" Content="Tuote 3" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="chkProduct4" Content="Tuote 4" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <Button Content="Osta" Click="btnBuy_Click" Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel Name="StockPanel" Margin="250,20,20,20"/>
    </Grid>
</Window>
